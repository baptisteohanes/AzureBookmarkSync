{
  "manifest_version": 2,
  "name": "Sync It!",
  "version": "0.1",
  "description": "A simple bookmark sync tool for Edge browser",
  "homepage_url": "https://github.com/baptisteohanes/MyBookmarkSync",
  "author": "Baptiste Ohanes",
  "icons": {
    "32": "icons/favicon_32.png",
    "48": "icons/favicon_48.png",
    "96": "icons/favicon_96.png"
  },

  "permissions": [
    "*://secure.aadcdn.microsoftonline-p.com/*",
    "*://maxcdn.bootstrapcdn.com/bootstrap/*",
    "*://login.microsoftonline.com/*",
    "*://graph.microsoft.com/*",
    "webRequest"
  ],
  "browser_action": {
    "default_icon": "icons/favicon_32.png",
    "default_title": "Sync my bookmarks !",
    "default_popup": "popup/config.html"
  },
  "options_ui": { 
    "page":"options/status.html"
  }
}
