{
  "manifest_version": 2,
  "name": "Sync It!",
  "version": "1.1",
  "description": "A simple bookmark button",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/bookmark-it",
  "author": "Baptiste Ohanes",
  "icons": {
    "32": "icons/favicon_32.png",
    "48": "icons/favicon_48.png",
    "96": "icons/favicon_96.png"
  },

  "permissions": [
    "bookmarks",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icons/favicon_32.png",
    "default_title": "Sync my bookmarks !",
    "default_popup": "popup/configandsync.html"
  },
  "options_ui": {
  "page": "options/configandsync.html",
  "browser_style": true
  }
}
